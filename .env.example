# ============================================
# VCET Alumni Hub - Environment Configuration
# ============================================
# Copy this file to .env and update with your values
# ============================================

# --------------------------------------------
# SERVER CONFIGURATION
# --------------------------------------------
NODE_ENV=development
PORT=3000
HOST=localhost

# --------------------------------------------
# DATABASE CONFIGURATION
# --------------------------------------------
# MySQL Database connection settings
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=
DB_NAME=vcet_alumni_hub
DB_PORT=3306
DB_CONNECTION_LIMIT=10

# --------------------------------------------
# SESSION CONFIGURATION
# --------------------------------------------
# Generate a random string (min 32 characters) for production
SESSION_SECRET=your-super-secret-session-key-change-this-in-production
SESSION_MAX_AGE=86400000

# --------------------------------------------
# JWT CONFIGURATION
# --------------------------------------------
# Generate a random string (min 32 characters) for production
JWT_SECRET=your-jwt-secret-key-change-this-in-production
JWT_EXPIRES_IN=7d

# --------------------------------------------
# APPLICATION CONFIGURATION
# --------------------------------------------
APP_NAME=VCET Alumni Hub
APP_VERSION=1.0.0
BASE_URL=http://localhost:3000

# --------------------------------------------
# FILE UPLOAD CONFIGURATION
# --------------------------------------------
MAX_FILE_SIZE=5242880
ALLOWED_EXTENSIONS=jpg,jpeg,png
UPLOAD_DIR=./uploads

# --------------------------------------------
# SECURITY CONFIGURATION
# --------------------------------------------
BCRYPT_ROUNDS=10

# --------------------------------------------
# OPTIONAL: EMAIL CONFIGURATION
# --------------------------------------------
# Uncomment and configure if you want email functionality
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-specific-password
# SMTP_FROM=noreply@vcet.edu
# SMTP_FROM_NAME=VCET Alumni Hub

# --------------------------------------------
# OPTIONAL: CLOUDINARY (for file uploads in production)
# --------------------------------------------
# Sign up at https://cloudinary.com (Free: 25GB)
# CLOUDINARY_CLOUD_NAME=your-cloud-name
# CLOUDINARY_API_KEY=your-api-key
# CLOUDINARY_API_SECRET=your-api-secret
